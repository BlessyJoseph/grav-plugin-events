{% extends 'partials/base.html.twig' %}

{% set collection = page.collection() %}

{% block content %}

	<h1>{{ page.title }}</h1>

	{{ page.content }}

    <table class="calendar">
        <thead>
            <tr>
                <th colspan="1" class="previous">
                    <a href="{{ calendar.previousMonth.url }}">{{ calendar.previousMonth.title|date('F') }}</a>
                </th>
                <th colspan="5" class="title">
                    <h3>{{ calendar.date|date('F Y') }}</h3>
                </th>
                <th colspan="1" class="next">
                    <a href="{{ calendar.nextMonth.url }}">{{ calendar.nextMonth.title|date('F') }}</a>
                </th>
            </tr>
            <tr>
                <th width="12%">Sunday</th>
                <th width="15%">Monday</th>
                <th width="15%">Tuesday</th>
                <th width="16%">Wednesday</th>
                <th width="15%">Thursday</th>
                <th width="15%">Friday</th>
                <th width="12%">Saturday</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            {% set startDow = calendar.date|date('F 1\\s\\t Y')|date('w') %}
            {% set dow = startDow %}
            {% for day in range(1,calendar.daysInMonth) %}
                {% if loop.first and startDow != 0 %}
                    <td colspan="{{ startDow }}"></td>
                {% endif %}
                <td {% if day == calendar.currentDay %}class="current"{% endif %}>
                    <div>
                        <div>{{ day }}</div>
                        <div>
                            {% for event in calendar.events[calendar.year][calendar.month][day] %}
                                {{ dump(event.title) }}
                                <div class="event"><a href="{{ event.url }}">{{ event.title }}</a></div>
                                
                            {% endfor %}
                        </div>
                    </div>
                </td>
                {% if loop.last and dow != 6 %}
                    <td colspan="{{ 6 - dow }}">&nbsp;</td>
                {% endif %}
                {% if dow == 6 %}
                    {% set dow = 0 %}
                </tr>
                <tr>
                {% else %}
                    {% set dow = dow + 1 %}
                {% endif %}
            {% endfor %}
            </tr>
        </tbody>
    </table>

    {% for event in collection %}
        
    {% endfor %}

{% endblock %}
