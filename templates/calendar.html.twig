{% extends 'partials/base.html.twig' %}

{% set collection = page.collection() %}

{% block content %}

	<h1>{{ page.title }}</h1>

	{{ page.content }}

    {{ dump(collection) }}

    {% for event in collection %}

        {# structure #}
            {% set day = event.header.event.start|date('d') %}
            {{ day }}
            {% set month = event.header.event.start|date('m') %}
            {{ month }}
        {# endstructure #}

    {% endfor %}

    {% set month = time|date('m') %}
    {% set current_month = time|date('F') %}
    {% set current_day = time|date('d') %}

    <table>
        <thead>
            <tr>
                <th colspan="7" class="center">
                    {{ month }}
                </th>
            </tr>
            <tr>
                <th width="12%">Sunday</th>
                <th width="15%">Monday</th>
                <th width="15%">Tuesday</th>
                <th width="16%">Wednesday</th>
                <th width="15%">Thursday</th>
                <th width="15%">Friday</th>
                <th width="12%">Saturday</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            {% set daysInMonth = time|date('t') %}
            {% set startDow = time|date('F 1\\s\\t Y')|date('w') %}
            {% set dow = startDow %}
            {% for day in range(1,daysInMonth) %}
                {% if loop.first and startDow != 0 %}
                    <td colspan="{{ startDow }}"></td>
                {% endif %}
                <td {% if day == current_day %}class="current"{% endif %}>
                    <div>
                        <div>{{ day }}</div>
                        <div>
                            
                        </div>
                    </div>
                </td>
                {% if loop.last and dow != 6 %}
                    <td colspan="{{ 6 - dow }}">&nbsp;</td>
                {% endif %}
                {% if dow == 6 %}
                    {% set dow = 0 %}
                </tr>
                <tr>
                {% else %}
                    {% set dow = dow + 1 %}
                {% endif %}
            {% endfor %}
            </tr>
        </tbody>
    </table>

    {% for event in collection %}
        
    {% endfor %}

{% endblock %}
