{% extends 'partials/base.html.twig' %}

{% block content %}

	<h1>{{ page.title }}</h1>

	{{ page.content }}

	<ul>
	    {% for event in page.collection %}
	        <li>
	            <a href="{{ event.url }}">{{ event.title }}</a> 
	            {{ event.header.event.start|date('F j, Y') }}
	        </li>
	    {% endfor %}
	</ul>

{% endblock %}
