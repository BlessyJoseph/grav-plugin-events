{% extends 'partials/base.html.twig' %}

{% block content %}

	{{ dump(header) }}

	<h1>{{ page.title}}</h1>
	<h2>{{ header.event.start|date('l, F d, Y, g:i') }}-{{ header.event.end|date('g:ia') }}</h2>

	<p>
		<strong>{{ header.event.start|date('F j, Y h:ia') }}</strong>

		{% if header.event.freq is defined %}
		/ Repeats {{ header.event.freq|capitalize }}
		{% endif %}

		{% if header.event.repeat is defined %}
		/ {{ header.event.repeatDisplay }}
		{% endif %}

		{% if header.event.until is defined %}
		/ Until {{ header.event.until|date('F j, Y') }}
		{% endif %}
	</p>

	{{ page.content }}

{% endblock %}
